        <TextBlock Style="{StaticResource labelStyle}" Text="地球资源学（核心通识）" HorizontalAlignment="Left" Margin="313,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBlock Style="{StaticResource labelStyle}" Text="Resources of the Earth" HorizontalAlignment="Left" Margin="313,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBlock Style="{StaticResource labelStyle}" Text="星期三 13-15 节/东B203（2-12 周）" HorizontalAlignment="Left" Margin="313,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
